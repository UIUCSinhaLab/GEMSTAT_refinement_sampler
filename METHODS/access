#1/bin/bash

#!/bin/bash
#
# from stackoverflow.com : http://stackoverflow.com/a/14203146
#
# Use -gt 1 to consume two arguments per pass in the loop (e.g. each
# argument has a corresponding value to go with it).
# Use -gt 0 to consume one or more arguments per pass in the loop (e.g.
# some arguments don't have a corresponding value to go with it such
# as in the --default example).
# note: if this is set to -gt 0 the /etc/hosts part is not recognized ( may be a bug )

#expected from environment
#BASE
#DATA
#JOBBASE
#N job number
#Whatever was in your settings file.



#DEBUG
echo "I received arguments ${*}"

#Default values
TRAIN=0


while [[ $# -gt 1 ]]
do
key="$1"

case $key in
    -t|--train)
    TRAIN=1
    ;;
    -d|--data)
    DATA="$2"
    shift # past argument
    ;;
    -l|--log)
    LOG="$2"
    shift # past argument
    ;;
    -o|--out)
    OUT_filename="$2"
    shift
    ;;
    -x|--parout)
    PAR_outfile="$2"
    shift
    ;;
    -p|--parfile)
    PARFILE="$2"
    shift
    ;;
    --)
    shift
    break
    ;;
    *)
            # unknown option
    ;;
esac
shift # past argument or value
done

#DEBUG
echo "Additional arguments" "${*}"
echo "DATA" ${DATA}
##
#Snippet from
#
#http://stackoverflow.com/questions/59895/can-a-bash-script-tell-what-directory-its-stored-in
#
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
#
#end snippet
##

#just for test
#DEBUG
SRC=${BASE}/GEM/GEMSTAT/src


#use whatever way you want to separate training from prediction
if [ ! "$TRAIN" == "1" ]
then
	NA_CYCLES=0
fi

SINGLE_PAR_FILE=$(basename ${PARFILE} .par)
STARTING_POINT_ARGS="-p ${PARFILE}"


export BASE_COMMON_ARGS="-e ${DATA}/expr.tab -f $DATA/factor_expr.tab -m $DATA/factors.wtmx -i ${DATA}/factor_info.txt -c $DATA/coop.txt -ff $DATA/free_fix.txt"
export COMMON_DATA_ARGS="-s $DATA/seqs.fa "
export MODEL_ARGS="-o Direct -oo SSE -ct 25 -rt 250 -et 0.5 "

ACCESS_ARGS="--gemstat ${SRC}/seq2expr --model ${MODEL_JSON} --epochs ${NUM_EPOCHS} --wtmx ${ACCESS_PRED_WTMX} --k_acc ${ACCESS_EFFECT}"
ACCESS_PROG="/shared-mounts/sinhas/bjlunt2/2015_Fall_PredictAccess/2016_PredicAccess/accessPred/accessibility_gemstat.bash"

if [ "${TRAIN}" == "1" ]
then
	bash ${ACCESS_PROG} ${ACCESS_ARGS} -- ${BASE_COMMON_ARGS} ${COMMON_DATA_ARGS} ${MODEL_ARGS} -fo ${OUT_filename} -na ${NA_CYCLES} ${STARTING_POINT_ARGS} -po ${PAR_outfile} ${*} &> ${LOG}
else
	bash ${ACCESS_PROG} ${ACCESS_ARGS} -- ${BASE_COMMON_ARGS} ${COMMON_DATA_ARGS} ${MODEL_ARGS} -fo ${OUT_filename} -na ${NA_CYCLES} ${STARTING_POINT_ARGS} ${*} &> ${LOG}
fi
